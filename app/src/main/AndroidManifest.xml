<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.ldnr.animalszootest">
    <uses-permission android:name="WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:icon="@mipmap/zoo">

        <activity android:name=".MapActivity"
            android:label="@string/map_tiltle">
        </activity>

        <activity android:name=".AquariumActivity"
            android:label="@string/aquarium_title">
        </activity>
        <activity android:name=".PopCornActivity"
            android:label="@string/popcorn_title"/>

        <activity android:name=".HomeActivity"
            android:label="@string/accueil">
        <intent-filter>
            <action android:name="android.intent.action.MAIN"/>
            <category android:name="android.intent.category.LAUNCHER"/>
        </intent-filter>
        </activity>
        <activity android:name=".AlertActivity" android:label="@string/alrt_btn">

        </activity>

    </application>
</manifest>
